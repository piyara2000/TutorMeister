<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Instructor-Rate&Review | TutorMeister</title>

  <link rel="stylesheet" href="css/insRateReview.css" />
  <link rel="stylesheet" href="css/app.css" />
  <link rel="icon" href="img/logo.jpg" type="image/jpg" />

</head>

<body>
  <%- include('navBarInstructor.ejs') %>
    <section class="containerA ">
      <div class="wrapper">
        <div class="prof">
          <img class="prof-image" src="img/user.png" alt="" />
          <% if (dbRecordList && dbRecordList.length> 0) { %> <% for (let i=0; i < dbRecordList.length; i++) { %>
              <span class="prof-title">
                <%= dbRecordList[i].Name %>
              </span>
        </div>
        <form method="post">
          <div class="side">
            <div class="form-group">
              <span>Name:</span>
              <%= dbRecordList[i].Name %>
            </div>
            <div class="form-group">
              <span>Grade:</span>
              <%= dbRecordList[i].Subject %>
            </div>
            <div class='star-rating'>
              <div class='ratingA'>
                <input type="radio" name="rating_num" id="star5" value="5" />
                <label for="star5"></label>
                <input type="radio" name="rating_num" id="star4" value="4" />
                <label for="star4"></label>
                <input type="radio" name="rating_num" id="star3" value="3" />
                <label for="star3"></label>
                <input type="radio" name="rating_num" id="star2" value="2" />
                <label for="star2"></label>
                <input type="radio" name="rating_num" id="star1" value="1" />
                <label for="star1"></label>
                <h6 class="rating_num"></h6>
  
                <br />
                <br /><br />
              </div>
            </div>
            <% } %>
              <% } %>
                <div class="form-group">
                  <span>Feedback:</span> <!-- Corrected the text -->
                  <textarea name="ins_review" class="form-control"></textarea> <!-- Corrected the name attribute -->
                </div>
                <div class="f">
                  <div class="flexBox">
                    <input type="submit" value="Add Feedback" class="button feedback-btn" />
                  </div>
                </div>
          </div>
          
        </form>
      </div>
    </section>
    <%- include('footer.ejs') %>
</body>

</html>