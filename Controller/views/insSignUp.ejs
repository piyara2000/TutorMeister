<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0"> -->
    <title>Instructor Sign-Up | TutorMeister</title>
    <link rel="stylesheet" href="css/signUp.css" />
    <link rel="stylesheet" href="css/app.css" />
    <link rel="icon" href="img/logo.jpg" type="image/jpg" />
  </head>
  <body>
    <div class="containerStd">
      <form method="post" class="form" onsubmit="return false">
        <div class="row">
          <div class="flex">
            <img class="home-logo-img-stSignup" src="img/RectangleLogo.png" />
          </div>
          <h3 class="heading-stSignup">Sign-Up As an Instructor</h3>
          <div class="flex1">
            <div>
              <input
                type="text"
                name="firstname"
                class="inputbox name"
                placeholder="First Name"
              />
            </div>
            <div>
              <input
                type="text"
                name="lastname"
                class="inputbox name"
                placeholder="Last Name"
              />
            </div>
          </div>
          <br />
          <center>
            <input
              type="text"
              name="username"
              class="inputbox details"
              placeholder="User Name"
            />
          </center>
          <br />
          <center>
            <input
              type="text"
              name="country"
              class="inputbox details"
              placeholder="Country"
            />
          </center>
          <br />
          <center>
            <input
              type="email"
              name="email"
              class="inputbox details"
              placeholder="Email"
            />
          </center>
          <br />
          <center>
            <input
              type="password"
              name="password"
              class="inputbox details"
              placeholder="Create password"
            />
          </center>
          <br />
          <% if (message !== undefined) { %>
          <p style="color: red; text-align: center"><%= message %></p>
          <% } %>
          <div class="flex3">
            <div class="flexBox">
              <input
                type="button"
                value="Sign-Up as a student"
                class="button signInstructor-btn"
                onclick="window.location.href='/student-register'"
              />
            </div>
            <div class="flexBox">
              <input
                type="button"
                value="Register"
                class="button register-btn"
                onclick="validateForm()"
              />
            </div>
          </div>
          <div class="flex4">
            <div>
              <input
                type="button"
                value="Already have an account? Log-In"
                class="button login-btn"
                onclick="window.location.href='/login'"
              />
            </div>
          </div>
          <br />
        </div>
      </form>
      <script>
        function validateForm() {
          // Check if the required fields are filled
          var firstname = document.getElementsByName("firstname")[0].value;
          var lastname = document.getElementsByName("lastname")[0].value;
          var username = document.getElementsByName("username")[0].value;
          var country = document.getElementsByName("country")[0].value;
          var email = document.getElementsByName("email")[0].value;
          var password = document.getElementsByName("password")[0].value;

          if (
            firstname === "" ||
            lastname === "" ||
            username === "" ||
            country === "" ||
            email === "" ||
            password === ""
          ) {
            alert("All fields are required");
            return false; // Prevent form submission
          }

          // Continue with form submission if all fields are filled
          document.forms[0].submit();
        }
      </script>
    </div>
    <%- include('footer.ejs') %>
  </body>
</html>
