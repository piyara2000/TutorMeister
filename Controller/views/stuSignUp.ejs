<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Sign-Up | TutorMeister</title>
    <link rel="stylesheet" href="css/signUp.css" />
    <link rel="stylesheet" href="css/app.css" />
    <link rel="icon" href="img/logo.jpg" type="image/jpg" />
  </head>
  <body>
    <div class="containerStd">
      <form
        id="signupForm"
        action="/student-register"
        method="post"
        class="form"
        onsubmit="return false"
      >
        <div class="row">
          <div class="flex">
            <img
              class="home-logo-img-stSignup"
              src="img/RectangleLogo.png"
              alt="HomePageLogo"
            />
          </div>
          <h3 class="heading-stSignup">Sign-Up As a Student</h3>
          <div class="flex1">
            <div>
              <input
                type="text"
                name="stufirstname"
                class="inputbox name"
                placeholder="First Name"
              />
            </div>
            <div>
              <input
                type="text"
                name="stulastname"
                class="inputbox name"
                placeholder="Last Name"
              />
            </div>
          </div>
          <br />
          <center>
            <input
              type="text"
              name="stuusername"
              class="inputbox details"
              placeholder="User Name"
            />
          </center>
          <br />
          <center>
            <input
              type="text"
              name="stucountry"
              class="inputbox details"
              placeholder="Country"
            />
          </center>
          <br />
          <center>
            <input
              type="email"
              name="stuemail"
              class="inputbox details"
              placeholder="Email"
            />
          </center>
          <br />
          <center>
            <input
              type="password"
              name="stupassword"
              class="inputbox details"
              placeholder="Create password"
            />
          </center>
          <br />
          <div class="flexPage2">
            <div class="flexLabel">
              <label class="label-eduQual">Educational Qualification:</label>
            </div>
            <div class="flexLabel2">
              <select
                id="eduQual"
                name="eduQual"
                class="educational-qualification"
                required
              >
                <option value="" disabled selected>Choose an option</option>
                <option value="school">School</option>
                <option value="higherEducation">Higher Education</option>
                <option value="undergraduate">Undergraduate</option>
                <option value="graduated">Graduated</option>
              </select>
            </div>
          </div>
          <div class="flexPage2">
            <div class="flexLabel">
              <label class="label-eduQual">Preferred Learning Style:</label>
            </div>
            <div class="flexLabel2">
              <select
                id="eduQual"
                name="learningStyle"
                class="educational-qualification"
                required
              >
                <option value="" disabled selected>Choose an option</option>
                <option value="visual">Visual</option>
                <option value="auditory">Auditory</option>
                <option value="kinesthetic">Kinesthetic</option>
              </select>
            </div>
          </div>
          <div class="flexPage2">
            <div class="flexLabel">
              <label class="label-eduQual">Learning Pace:</label>
            </div>
            <div class="flexLabel2">
              <select
                id="eduQual"
                name="learningPace"
                class="educational-qualification"
                required
              >
                <option value="" disabled selected>Choose an option</option>
                <option value="slow">Slow</option>
                <option value="average">Average</option>
                <option value="fast">Fast</option>
              </select>
            </div>
          </div>
          <div class="flexPage2">
            <div class="flexLabel">
              <label class="label-eduQual">Learning Style:</label>
            </div>
            <div class="flexLabel2">
              <select
                id="eduQual"
                name="isGroup"
                class="educational-qualification"
                required
              >
                <option value="" disabled selected>Choose an option</option>
                <option value="oneOnOne">One-on-one</option>
                <option value="group">Group</option>
                <option value="both">Both</option>
              </select>
            </div>
          </div>
          <div class="flexPage2">
            <div class="flexLabel">
              <label class="label-eduQual">Learning Mode:</label>
            </div>
            <div class="flexLabelRadio">
              <div class="optionGroup">
                <input
                  type="radio"
                  id="inPerson"
                  name="learningMode"
                  value="inPerson"
                  class="radioButton"
                  required
                />
                <label for="inPerson">In person</label>
              </div>
              <div class="optionGroup">
                <input
                  type="radio"
                  id="online"
                  name="learningMode"
                  value="online"
                  class="radioButton"
                  required
                />
                <label for="online">Online</label>
              </div>
            </div>
          </div>
          <div class="flexPage2">
            <div class="flexLabel">
              <label class="label-eduQual">Learning Preferences:</label>
            </div>
            <div class="flexLabel2">
              <input
                type="text"
                name="additionalText"
                class="richText"
                placeholder=""
              />
            </div>
          </div>
          <% if (message !== undefined) { %>
          <p style="color: red; text-align: center"><%= message %></p>
          <% } %>
          <div class="flex3">
            <div class="flexBox">
              <input
                type="button"
                value="Sign-Up as an instructor"
                class="button signInstructor-btn"
                onclick="window.location.href = '/instructor-register'"
              />
            </div>

            <div class="flexBox">
              <input
                type="button"
                value="Register"
                class="button register-btn"
                onclick="validateForm()"
              />
            </div>
          </div>
          <div class="flex4">
            <div>
              <input
                type="button"
                value="Already have an account? Log-In"
                class="button login-btn"
                onclick="window.location.href = '/login'"
              />
            </div>
          </div>
        </div>
      </form>
      <script>
        function validateForm() {
          // Check if the required fields are filled
          var stufirstname =
            document.getElementsByName("stufirstname")[0].value;
          var stulastname = document.getElementsByName("stulastname")[0].value;
          var stuusername = document.getElementsByName("stuusername")[0].value;
          var stucountry = document.getElementsByName("stucountry")[0].value;
          var stuemail = document.getElementsByName("stuemail")[0].value;
          var stupassword = document.getElementsByName("stupassword")[0].value;

          if (
            stufirstname === "" ||
            stulastname === "" ||
            stuusername === "" ||
            stucountry === "" ||
            stuemail === "" ||
            stupassword === ""
          ) {
            alert("All fields are required");
            return false; // Prevent form submission
          }

          // Continue with form submission if all fields are filled
          document.forms[0].submit();
        }
      </script>
    </div>
    <%- include('footer.ejs') %>
  </body>
</html>
